!!! 5
%html.view.view_writehistory(data-app-version="#{MANIFEST["version"]}" tabindex="-1")
  %head
    %meta(charset="utf-8")
    %meta(name="referrer" content="never")
    %title 書込履歴
    %link(rel="stylesheet" href="/ui.css?v=#{MANIFEST["version"]}")
    %link(rel="stylesheet" href="writehistory.css?v=#{MANIFEST["version"]}")
    %script(src="/lib/jshortquery.min.js?v=#{MANIFEST["version"]}" defer=true)
    %script(src="/ui.js?v=#{MANIFEST["version"]}" defer=true)
    %script(src="/app.js?v=#{MANIFEST["version"]}" defer=true)
    %script(src="module.js?v=#{MANIFEST["version"]}" defer=true)
    %script(src="writehistory.js?v=#{MANIFEST["version"]}" defer=true)
  %body
    %nav.nav_bar
      %label
        %input.searchbox(type="search" placeholder="検索")
        %span.hit_count
      .button.button_back.disabled(title="戻る")
      .button.button_forward.disabled(title="進む")
      .button.button_reload(title="再読み込み")
      .button.button_tool(title="メニュー")
        %ul.hidden
          %li.button_history_clear 書込履歴を消去
    .content(tabindex="0")
    .loading_overlay Loading...
    %template#template_thread_list_contextmenu
      %menu.thread_list_contextmenu
        %li.del_writehistory この履歴を削除
