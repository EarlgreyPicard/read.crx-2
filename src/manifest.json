{
  "name" : "read.crx 2",
  "version" : "0.50",
  "description" : "2chブラウザ",
  "minimum_chrome_version" : "17",
  "content_security_policy": "default-src 'self'; img-src 'self' http://* https://*; style-src 'self' 'unsafe-inline'; connect-src 'self' http://*; frame-src 'self' http://*",
  "incognito" : "split",
  "options_page" : "view/index.html?q=config",
  "permissions" : [
    "bookmarks",
    "cookies",
    "tabs",
    "unlimitedStorage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "http://*/*"
  ],
  "app" : {
    "launch" : {
      "local_path" : "/view/index.html"
    }
  },
  "icons" : {
    "128" : "img/read.crx_128x128.png",
    "48" : "img/read.crx_48x48.png",
    "16" : "img/read.crx_16x16.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*.2ch.net/*",
        "http://jbbs.livedoor.jp/*",
        "http://*.machi.to/*"
      ],
      "js" : ["/cs_addlink.js"]
    },
    {
      "matches" : [
        "http://find.2ch.net/*"
      ],
      "js" : ["/cs_search.js"]
    },
    {
      "matches" : [
        "http://*.2ch.net/test/bbs.cgi*",
        "http://jbbs.livedoor.jp/bbs/write.cgi/*",
        "http://*.p2.2ch.net/p2/post_form.php?*",
        "http://*.p2.2ch.net/p2/post.php?*"
      ],
      "js" : ["/write/cs_write.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ]
}
