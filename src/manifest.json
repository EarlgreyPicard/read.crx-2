{
  "name" : "read.crx 2",
  "version" : "0.0",
  "description" : "2chブラウザ",
  "minimum_chrome_version" : "11",
  "incognito" : "split",
  "options_page" : "app.html?q=config",
  "permissions" : [
    "bookmarks",
    "cookies",
    "tabs",
    "unlimitedStorage",
    "http://*/*"
  ],
  "app" : {
    "launch" : {
      "local_path" : "app.html"
    }
  },
  "icons" : {
    "128" : "/img/read.crx_128x128.png",
    "48" : "/img/read.crx_48x48.png",
    "16" : "/img/read.crx_16x16.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*.2ch.net/*",
        "http://jbbs.libedoor.jp/*",
        "http://*.machi.to/*"
      ],
      "js" : ["/cs_addlink.js"]
    },
    {
      "matches" : [
        "http://*.2ch.net/test/read.cgi/*",
        "http://*.2ch.net/test/bbs.cgi*",
        "http://jbbs.livedoor.jp/bbs/read.cgi/*",
        "http://jbbs.livedoor.jp/bbs/write.cgi/*"
      ],
      "js" : ["/write/cs_write.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ]
}
